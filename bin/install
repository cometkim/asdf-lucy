#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

function install_version() {
  local version=$1
  local install_path=$2

  local platform
  platform=$(get_platform)

  local bin_url
  bin_url=$(get_bin_url "$version" "$platform")

  local tmpdir
  tmpdir=$(get_temp_dir)
  trap 'rm -rf $tmpdir' EXIT

  (
    set -e
    mkdir -p "$install_path/bin"

    echo "Installing Lucy DSL compiler v$version"
    curl -sSfLo "$tmpdir/lucyc.tar.gz" "$bin_url" || fail "Couldn't download the lucy compiler from $bin_url"

    tar -xvzf "$tmpdir/lucyc.tar.gz" "$tmpdir/lucyc"
    mv "$tmpdir/lucyc" "$install_path/bin/"

    chmod +x "$install_path/bin/lucyc"
  ) || (rm -rf "$install_path"; exit 1)
}

if [ "$ASDF_INSTALL_TYPE" != "version" ]; then
  fail "asdf-lucy currently supports release install only"
fi

install_version "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
